<div id='flash'></div>
<%= form_for @conversation, html: {remote: true} do |f| %>
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, autofocus: true, class: 'form-control', id: "conversation_title" %>
    </div>
    <div class='form-group'>
        <%= f.label :description %>
        <%= f.text_field :description, autofocus: true, class: 'form-control', id: "conversation_description" %>
    </div>
    <div class="form-group">
        <%= f.collection_select(:topic_id, Topic.all, :id, :to_s, {prompt: 'Select Topic'}, class: 'form-control')%>
    </div>

    <span><%= f.submit "Submit!", class: 'btn btn-primary', remote: true %></span>
    <button type='button' class='btn' data-dismiss='modal' aria-hidden='true'>Cancel</button>
<% end %>
