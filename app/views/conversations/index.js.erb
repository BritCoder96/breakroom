$("#conversations-feed").html('<%= j render partial: "conversations" %>');
$("#topic-filters").html('<%= j render partial: "topic_filters" %>');
$('#my-posts').append('<%= j render @posts %>');
<% if @posts.next_page %>
  $('.pagination').replaceWith('<%= j will_paginate @posts %>');
<% else %>
  $(window).off('scroll');
  $('.pagination').remove();
<% end %>
