<%= form_for @topic do |f| %>
    <%= f.hidden_field :organization_id, :value => current_user.organization_id %>
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
    </div>

    <%= f.submit "Add!", class: 'btn btn-primary' %>
<% end %>
